{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build - debug",
      "command": "C:\\Workdir\\Programs\\msys64\\mingw64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-pg",
        "-no-pie",
        "-std=c++20",
        "${workspaceFolder}\\src\\*.cpp",
        "-lsfml-graphics",
        "-o",
        "${workspaceFolder}\\vbs.exe",
        "-I",
        "${workspaceFolder}\\include",
        "-D_USE_MATH_DEFINES",
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "C/C++: g++.exe build - release",
      "command": "C:\\Workdir\\Programs\\msys64\\mingw64\\bin\\g++.exe",
      "args": [
        "-O3",
        "-Ofast",
        "-finline-functions",
        "-ffast-math",
        "-march=native",
        "-fopenmp",
        "-floop-interchange",
        "-floop-strip-mine",
        "-floop-block",
        "-funroll-loops",
        "-fassociative-math",
        "-frename-registers",
        "-ftracer",
        "-ftree-vectorize",
        "-fomit-frame-pointer",
        "-flto",
        "-std=c++20",
        "-o",
        "${workspaceFolder}\\vbs.exe",
        "${workspaceFolder}\\src\\*.cpp",
        "-lsfml-graphics",
        "-I",
        "${workspaceFolder}\\include",
        "-Wall",
        "-Wextra",
        "-Wpedantic",
        "-Wshadow",
        "-Wformat=2",
        "-Wnull-dereference",
        "-D_USE_MATH_DEFINES",
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "Custom task - release."
    },
  ],
  "version": "2.0.0"
